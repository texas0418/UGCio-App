{
  "expo": {
    "name": "UGC Portfolio & Rate Hub",
    "slug": "ugc-portfolio-rate-hub",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "ugcio",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#09090B"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.ugcio.app",
      "buildNumber": "1",
      "infoPlist": {
        "CFBundleDisplayName": "UGCio",
        "NSCameraUsageDescription": "UGCio needs camera access to capture content for your portfolio.",
        "NSPhotoLibraryUsageDescription": "UGCio needs photo library access to add content to your portfolio.",
        "NSPhotoLibraryAddUsageDescription": "UGCio needs permission to save images to your photo library."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.ugcio.app"
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-router",
        {
          "origin": "https://ugcio.app/"
        }
      ],
      [
        "expo-notifications",
        {
          "sounds": []
        }
      ],
      "expo-font",
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
